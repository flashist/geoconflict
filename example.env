# SSH Configuration
SSH_KEY=~/.ssh/your-ssh-key

# Docker Configuration
DOCKER_USERNAME=username
DOCKER_REPO=your-repo-name
DOCKER_TOKEN=your_docker_token_here

# Admin credentials
ADMIN_TOKEN=your_admin_token_here
API_KEY=your_api_key_here

# Object Storage (optional)
STORAGE_ENDPOINT=https://storage.example.com
STORAGE_ACCESS_KEY=your_storage_access_key
STORAGE_SECRET_KEY=your_storage_secret_key
STORAGE_BUCKET=your-bucket-name

# Telemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-collector.example.com/v1/metrics
OTEL_AUTH_HEADER=Bearer your-otel-token
OTEL_USERNAME=otel-user
OTEL_PASSWORD=otel-pass
OTEL_ENDPOINT=https://otel.example.com

# Per-environment hosts (SSH targets)
SERVER_HOST_DEV=192.0.2.10
SERVER_HOST_STAGING=192.0.2.20
SERVER_HOST_PROD=192.0.2.30

# Public access metadata (override if different from SSH target)
PUBLIC_HOST_DEV=192.0.2.10
PUBLIC_PROTOCOL_DEV=http
PUBLIC_PORT_DEV=80
DEPLOYMENT_ID_DEV=dev
API_BASE_URL_DEV=http://192.0.2.10:8787
JWT_ISSUER_DEV=http://192.0.2.10:8787
JWT_AUDIENCE_DEV=localhost

PUBLIC_HOST_STAGING=192.0.2.20
PUBLIC_PROTOCOL_STAGING=http
PUBLIC_PORT_STAGING=80
DEPLOYMENT_ID_STAGING=staging
API_BASE_URL_STAGING=http://192.0.2.20:8787
JWT_ISSUER_STAGING=http://192.0.2.20:8787
JWT_AUDIENCE_STAGING=staging

PUBLIC_HOST_PROD=192.0.2.30
PUBLIC_PROTOCOL_PROD=https
PUBLIC_PORT_PROD=443
DEPLOYMENT_ID_PROD=prod
API_BASE_URL_PROD=https://192.0.2.30
JWT_ISSUER_PROD=https://192.0.2.30
JWT_AUDIENCE_PROD=prod

# Optional HTTP basic auth credentials
BASIC_AUTH_USER=
BASIC_AUTH_PASS=
