# Shared configuration (copy to `.env`)
# These values apply to every environment unless overridden in `.env.<env>`.

# VPS credentials (optional fallback)
VPS_IP=
VPS_LOGIN=root
VPS_PASSWORD=

# Global configuration
SSH_KEY=$HOME/.ssh/id_rsa

DOCKER_USERNAME=
DOCKER_TOKEN=

ADMIN_TOKEN=
API_KEY=

# Environment-specific fallbacks (override in `.env.<env>`)
SERVER_HOST_DEV=
PUBLIC_HOST_DEV=
PUBLIC_PROTOCOL_DEV=http
PUBLIC_PORT_DEV=80
DEPLOYMENT_ID_DEV=dev
API_BASE_URL_DEV=
JWT_ISSUER_DEV=
JWT_AUDIENCE_DEV=

SERVER_HOST_STAGING=
PUBLIC_HOST_STAGING=
PUBLIC_PROTOCOL_STAGING=http
PUBLIC_PORT_STAGING=80
DEPLOYMENT_ID_STAGING=staging
API_BASE_URL_STAGING=
JWT_ISSUER_STAGING=
JWT_AUDIENCE_STAGING=

SERVER_HOST_PROD=
PUBLIC_HOST_PROD=
PUBLIC_PROTOCOL_PROD=http
PUBLIC_PORT_PROD=80
DEPLOYMENT_ID_PROD=prod
API_BASE_URL_PROD=
JWT_ISSUER_PROD=
JWT_AUDIENCE_PROD=

STORAGE_ENDPOINT=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_BUCKET=

OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_AUTH_HEADER=
OTEL_USERNAME=
OTEL_PASSWORD=
OTEL_ENDPOINT=

BASIC_AUTH_USER=
BASIC_AUTH_PASS=

# -----------------------------------------------------------
# Per-environment overrides (store in .env.dev, .env.prod, etc.)
# -----------------------------------------------------------
# Example .env.dev:
# VPS_IP=203.0.113.10
# VPS_LOGIN=root
# VPS_PASSWORD=super-secret
# DOCKER_REPO=geoconflict-dev
# PUBLIC_HOST=203.0.113.10
# PUBLIC_PROTOCOL=http
# PUBLIC_PORT=80
# DEPLOYMENT_ID=dev
# API_BASE_URL=http://203.0.113.10
# JWT_ISSUER=http://203.0.113.10
# JWT_AUDIENCE=203.0.113.10
#
# Example .env.prod:
# VPS_IP=198.51.100.25
# VPS_LOGIN=openfront
# VPS_PASSWORD=another-secret
# DOCKER_REPO=geoconflict-prod
# PUBLIC_HOST=game.example.com
# PUBLIC_PROTOCOL=https
# PUBLIC_PORT=443
# DEPLOYMENT_ID=prod
# API_BASE_URL=https://api.example.com
# JWT_ISSUER=https://game.example.com
# JWT_AUDIENCE=game.example.com
